@model List<GermanGrammar3.Models.GermanModel>

@{
    ViewData["Title"] = "Index Database";
}

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SearchString">Search:</label>
        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>  
</form>



<h1> All List</h1>
<br />
<br />
<table class="table">
    <thead>
        <tr><th>Id</th><th>german</th></tr>        
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
           <tr>
                <td>@item.id</td>


                <td>@item.german</td>


                <td><a href="All/GoToEdit/@item.id">Edit</td>

           </tr>
               
           
        }

    </tbody>
</table>
